<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Splash_Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/facilities"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_minus30sdp"
        app:cardCornerRadius="@dimen/_30sdp"
        android:background="@drawable/background"
        android:layout_height="@dimen/_280sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:id="@+id/iv_background"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/anim_slideshow"
                android:layout_height="match_parent">

            </ImageView>
            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_alignParentTop="true"
                android:padding="@dimen/_2sdp"
                android:id="@+id/more"
                android:elevation="@dimen/_10sdp"
                android:background="@drawable/circleshape"
                android:src="@drawable/ic_baseline_whatshot_24"
                android:layout_height="@dimen/_35sdp">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:id="@+id/hotel_facilities"
                android:layout_alignParentTop="true"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/_40sdp"
                android:elevation="@dimen/_10sdp"
                android:textStyle="bold"
                android:background="@drawable/oval1"
                android:layout_marginBottom="@dimen/_minus5sdp"
                android:textColor="@color/green"
                android:text="Facilities"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/destiny_suites"
                android:gravity="center"
                android:layout_above="@+id/away_from_home"
                android:textSize="@dimen/_22ssp"
                android:elevation="@dimen/_10sdp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_minus5sdp"
                android:textColor="@color/white"
                android:text="Destiny Suites"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/away_from_home"
                android:layout_width="match_parent"
                android:text="home away from home"
                android:gravity="center"
                android:fontFamily="@font/elegant_bold"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/_15ssp"
                android:elevation="@dimen/_20sdp"
                android:textStyle="italic"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="#F3F2F2"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_320sdp"
        android:layout_below="@id/facilities"
        android:layout_alignParentBottom="true">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/make_reservation"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:id="@+id/reservation_icon"

                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circleshape"
                    android:src="@drawable/ic_outline_house_24">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/reservation_icon"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Make Reservation"

                    android:textColor="@color/black">

                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/spa_booking"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:id="@+id/spa_booking_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circleshape"
                    android:src="@drawable/ic_outline_spa_24">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spa_booking_icon"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Spa Booking"
                    android:textColor="@color/black">

                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:id="@+id/guest_treat"
            android:layout_centerInParent="true"
            android:background="@drawable/circleshape"
            android:elevation="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/guest_treat_icon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/ic_outline_account_circle_24">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:text="Guest\nTreat"
                android:textColor="@color/white"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentLeft="true"
            android:id="@+id/ask_anything"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:id="@+id/ask_anything_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circleshape"
                    android:padding="@dimen/_1sdp"
                    android:src="@drawable/ic_outline_new_releases_24">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ask_anything_icon"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Ask Anything"
                    android:textColor="@color/black">

                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/tell_us_your_story"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_20sdp"
            app:cardElevation="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <ImageView
                    android:id="@+id/tell_us_your_story_icon"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circleshape"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/ic_outline_emoji_people_24">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tell_us_your_story_icon"
                    android:layout_centerInParent="true"
                    android:gravity="center"

                    android:text="Tell us About your Story"
                    android:textColor="@color/black">

                </TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</RelativeLayout>